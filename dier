<?php
   class Animal {

    public $naam;
 


    public function __construct($naam){
     $this ->naam = $naam;
     echo "Het dier is geboren\n";
    }


    public function Info() {
    echo "De naam van het dier is " . $this->naam . "\n";
    }


      public function Eat() {
      echo "Het beest eet\n";
    }


      public function Sleep() {
      echo "Het beest slaapt\n";
    }
}
//Maak een object Animal aan
$dier = new Animal("Leo");

//Roep alle methodes aan
$dier->info();
echo "<br>";
$dier->Eat();
echo "<br>";
$dier->Sleep();
?>
